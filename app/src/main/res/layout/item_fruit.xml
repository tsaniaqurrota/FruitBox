<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_list"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    >

    <ImageView
        android:id="@+id/img_fruit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/img_mangga"
        android:scaleType="fitXY"
        />


    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TERSEDIA"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_weight="3"
            android:background="@drawable/fruit_label_avail"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name_txt"
                style="@style/CustomTextView18Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mangga"
                android:layout_weight="1"
                />


            <TextView
                android:id="@+id/harga_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 15.000,- /kg"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/jenis_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arum Manis"
            android:textSize="12sp"
            android:textStyle="italic"
            />

    </LinearLayout>

</LinearLayout>
