<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FruitBox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white_bg</item>
        <item name="android:fontFamily">@font/poppinsmed</item>
    </style>

    <style name="Theme.FruitBox" parent="Base.Theme.FruitBox" />


    <style name="CustomRoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppinsmed</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppinsmed</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TextViewNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppinsmed</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="CustomTextView18Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppinsmed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="CustomEditText12Normal" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppinsmed</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:background">@drawable/bg_list</item>
    </style>

    <style name="EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:background">@drawable/bg_search</item>
    </style>
</resources>